import java.io.*;
class EvenSumFibonacci {
    public static void main(String[] args) {
        int n = 4; 
        int sum = 0;
        int first = 0, second = 1;
        for (int i = 0; i <= 2 * n; i++) {
            if (i % 2 == 0) {
                sum += first;
            }
            int next = first + second;
            first = second;
            second = next;
        }        
        System.out.println("Sum of numbers at even indexes: " + sum);
    }
}


